while true do
wait(0.03)
if script.Parent.Value.Value == 0 then
script.Parent.Sign.SurfaceGui.TextLabel.Text = "Forest Hills"
script.Parent.Num.SurfaceGui.TextLabel.Text = "39"
script.Parent.Via.SurfaceGui.TextLabel.Text = "Back Bay"
end

if script.Parent.Value.Value == 1 then
script.Parent.Sign.SurfaceGui.TextLabel.Text = ""
wait(0)
script.Parent.Sign.SurfaceGui.TextLabel.Text = ""
wait(0)
end

if script.Parent.Value.Value == 2 then
script.Parent.Sign.SurfaceGui.TextLabel.Text = ""
wait(0)
script.Parent.Sign.SurfaceGui.TextLabel.Text = ""
end

if script.Parent.Value.Value == 3 then
script.Parent.Sign.SurfaceGui.TextLabel.Text = ""
script.Parent.Num.SurfaceGui.TextLabel.Text = ""
script.Parent.Via.SurfaceGui.TextLabel.Text = ""
wait(0)
end

if script.Parent.Value.Value == 4 then
		script.Parent.Sign.SurfaceGui.TextLabel.Text = "Mattapan"
script.Parent.Num.SurfaceGui.TextLabel.Text = "28"
script.Parent.Via.SurfaceGui.TextLabel.Text = ""		
	
wait(0)
end

if script.Parent.Value.Value == 5 then
script.Parent.Sign.SurfaceGui.TextLabel.Text = "Ruggles"
script.Parent.Num.SurfaceGui.TextLabel.Text = "28"
script.Parent.Via.SurfaceGui.TextLabel.Text = "TERMINATES AT MATTAPAN"
wait(0)
end
